<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_back"
    android:orientation="vertical"
    android:background="@color/material_grey_300">

    <RelativeLayout
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@mipmap/theme_logo"
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"/>
        <LinearLayout
            android:layout_below="@+id/iv_logo"
            android:id="@+id/ll_input"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:drawablePadding="5dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@mipmap/username"
                android:id="@+id/et_username"
                android:background="#00000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/app_white"
                android:hint="请输入学号"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#bfbfbfbf"
                />

            <EditText
                android:drawablePadding="5dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@mipmap/password"
                android:id="@+id/et_password"
                android:background="#00000000"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/app_white"
                android:hint="请输入学号"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#bfbfbfbf"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/rl_other"
            android:layout_below="@+id/ll_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/rg_type"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:checked="true"
                    android:id="@+id/rb_student"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_stu"
                    android:textColor="@color/app_white"
                    />
                <RadioButton
                    android:id="@+id/rb_teacher"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/app_white"
                    android:text="@string/app_tea"/>
            </RadioGroup>

            <TextView
                android:textColor="@color/app_on"
                android:id="@+id/tv_forget_pwd"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_forget_pwd"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/rl_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">
            <Button
                android:id="@+id/bt_login"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="登录"
                android:textColor="@color/app_white"
                android:background="@drawable/shape"/>
        </RelativeLayout>

    </RelativeLayout>



</LinearLayout>
