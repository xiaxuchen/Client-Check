<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.cxyz.commons.widget.TitleView
        android:id="@+id/tv_expand_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.cxyz.commons.widget.TitleView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="289dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_expandfun_image"
            android:layout_width="match_parent"
            android:layout_height="275dp"
            android:layout_weight="1"
            android:src="@mipmap/pxxyc" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="163dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="99dp"
            android:layout_height="99dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/linerlayout_shape"
            android:orientation="vertical">

            <com.cxyz.mains.activity.CircleImage
                android:id="@+id/iv_expandfun_shcoolnews"
                android:layout_width="75dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:background="@color/common_white"
                android:src="@mipmap/newspaper" />

            <TextView
                android:id="@+id/tv_expandfun_shocoolnews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="校园新闻" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="99dp"
            android:layout_height="99dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/linerlayout_shape"

            android:orientation="vertical">

            <com.cxyz.mains.activity.CircleImage
                android:id="@+id/iv_expandfun_notice"
                android:layout_width="75dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:background="@color/common_white"
                android:src="@mipmap/newspaper" />

            <TextView
                android:id="@+id/tv_expandfun_notice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="公告信息" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="99dp"
            android:layout_height="99dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/linerlayout_shape"
            android:orientation="vertical">

            <com.cxyz.mains.activity.CircleImage
                android:id="@+id/iv_expandfun_classsight"
                android:layout_width="75dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:background="@color/common_white"
                android:src="@mipmap/newspaper" />

            <TextView
                android:id="@+id/tv_expandfun_classsight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="班级风采" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="163dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="99dp"
            android:layout_height="99dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/linerlayout_shape"
            android:orientation="vertical">

            <com.cxyz.mains.activity.CircleImage
                android:id="@+id/iv_expandfun_member"
                android:layout_width="75dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:background="@color/common_white"
                android:src="@mipmap/newspaper" />

            <TextView
                android:id="@+id/tv_expandfun_member"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="班级成员" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="99dp"
            android:layout_height="99dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/linerlayout_shape"
            android:orientation="vertical">

            <com.cxyz.mains.activity.CircleImage
                android:id="@+id/iv_expandfun_communication"
                android:layout_width="75dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:background="@color/common_white"
                android:src="@mipmap/newspaper" />

            <TextView
                android:id="@+id/tv_expandfun_communication"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="通讯录" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="99dp"
            android:layout_height="99dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/linerlayout_shape"
            android:orientation="vertical">

            <com.cxyz.mains.activity.CircleImage
                android:id="@+id/iv_expandfun_classlist"
                android:layout_width="75dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:background="@color/common_white"
                android:src="@mipmap/newspaper" />

            <TextView
                android:id="@+id/tv_expandfun_classlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="课程表" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
