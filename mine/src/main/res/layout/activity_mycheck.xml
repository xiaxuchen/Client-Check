<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical"

    >


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="207dp"
        android:background="#1296db"
        android:weightSum="1">

        <TextView
            android:text="我的考勤"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="30sp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_mycheck" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="156dp"
                android:layout_height="match_parent"
                android:id="@+id/cicle">

                <com.qmuiteam.qmui.widget.QMUIProgressBar
                    android:id="@+id/qmuiProgressBar"
                    android:layout_width="110dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:textColor="#7A7A7A"
                    android:textSize="18sp"
                    app:qmui_background_color="#919191"
                    app:qmui_progress_color="#3A5FCD"
                    app:qmui_stroke_width="25dp"
                    app:qmui_type="type_circle"></com.qmuiteam.qmui.widget.QMUIProgressBar>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="82dp"
                    android:weightSum="1">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/absent"
                        android:id="@+id/iv_absent" />

                    <TextView
                        android:text="旷课2次"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/tv_absent"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                       android:layout_gravity="center"
                        android:layout_width="51dp"
                        android:layout_height="48dp"
                        app:srcCompat="@drawable/late"
                        android:id="@+id/iv_late" />

                    <TextView
                        android:text="迟到早退两次"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/tv_late"
                        android:layout_weight="1" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/changecolor"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="291dp"
            android:layout_height="30dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="60dp"
            android:layout_weight="0.03"
            android:background="@drawable/shadow"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_expand"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                app:srcCompat="@drawable/expand" />

            <TextView
                android:id="@+id/tv_expand"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:gravity="start"
                android:text="点击展开记录"
                android:textColor="#000"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:weightSum="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_reddot"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        app:srcCompat="@drawable/dotred" />

                    <TextView
                        android:id="@+id/tv_checkerror"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textSize="25sp"
                        android:text="15项考勤异常"
                        android:layout_weight="0.88"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="30dp" />
                </LinearLayout>

                <ExpandableListView
                    android:id="@+id/el_checksituation"
                    android:layout_margin="5dp"
                    android:groupIndicator="@null"
                    android:layout_width="match_parent"
                    android:layout_height="255dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
