<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.cxyz.commons.widget.TitleView
        android:id="@+id/tv_resetpwd_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.cxyz.commons.widget.TitleView>

    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/linerlayout_shapecolor"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_resetpwd_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="textPassword"
            android:hint="请新输入密码"
            android:textSize="15sp"
            android:theme="@style/MyEditText"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="310dp"
        android:layout_gravity="center"
        android:layout_height="40dp"
        android:background="@drawable/linerlayout_shapecolor"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <EditText
            android:id="@+id/et_resetpwd_confirmpwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请新确认密码"
            android:inputType="textPassword"
            android:layout_weight="1"
            android:textSize="15sp"
            android:theme="@style/MyEditText"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_restpwd_info"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="必须是6—16个英文字母、数字或符号（空格除外），且字母、数字和标点至少包含两种"
        android:textColor="@color/material_grey_600"
        android:textSize="14sp"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/bt_restpwd_complete"
        android:layout_width="131dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/main_shape"
        android:text="完成"
        android:textColor="@color/common_white" />
</LinearLayout>
