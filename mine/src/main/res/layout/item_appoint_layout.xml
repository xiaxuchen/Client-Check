<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                android:id="@+id/iv_appointmentstu_image"
                android:layout_width="70dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_appointmentstu_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张全蛋"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_appointmentstu_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="17478000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_appointmentstu_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="详情信息"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/bt_appointmentstu_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:background="@drawable/main_shape"
                    android:text="审核"
                    android:textColor="@color/common_white" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_appointmentvisible_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="74dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView26"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="请假时间: "
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_appointmentstu_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2018.10.28 上午一二节"
                        android:textSize="14sp"
                        tools:layout_editor_absoluteX="72dp"
                        tools:layout_editor_absoluteY="4dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView33"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="请假原因: " />

                    <TextView
                        android:id="@+id/tv_appointmentstu_reason"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="事假" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_appointmentstu_moreinfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="false"
                        android:text="没法抗拒浓情蜜意  始终思念你 好想给你知 柔情常在心中想放肆  愿对你说声浓情莫变" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
