<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.cxyz.commons.widget.TitleView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="修改密码"/>


    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/linerlayout_shapecolor"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_origin_pwd_hint"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="原密码"
            android:textColor="@color/material_grey_600"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_origin_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:theme="@style/MyEditText"
            android:inputType="textPassword"
            android:textSize="15sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/linerlayout_shapecolor"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_new_pwd_hint"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="新密码"
            android:textColor="@color/material_grey_600"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_new_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:theme="@style/MyEditText"
            android:inputType="textPassword"
            android:textSize="15sp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/linerlayout_shapecolor"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_confirm_pwd_hint"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="确认密码"
            android:textColor="@color/material_grey_600"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_confirm_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:theme="@style/MyEditText"
            android:inputType="textPassword"
            android:textSize="15sp"/>


    </LinearLayout>
    <Button
        android:id="@+id/btn_alter"
        android:layout_width="320dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_selector"
        android:text="确认修改"
        android:textColor="@color/common_white" />


</LinearLayout>