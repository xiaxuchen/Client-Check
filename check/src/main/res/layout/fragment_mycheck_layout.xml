<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_primary_color"
        android:weightSum="1">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="150dp">

                <RelativeLayout
                    android:id="@+id/cicle"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/layout_circleshape"
                    android:orientation="vertical">

                    <com.qmuiteam.qmui.widget.QMUIProgressBar
                        android:id="@+id/qmuiProgressBar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:textColor="#7A7A7A"
                        android:textSize="18sp"
                        app:qmui_background_color="#919191"
                        app:qmui_progress_color="@color/app_on"
                        app:qmui_stroke_width="10dp"
                        app:qmui_type="type_circle">
                    </com.qmuiteam.qmui.widget.QMUIProgressBar>
                    <LinearLayout
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_progress"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textStyle="bold"
                            android:textSize="20sp"/>
                        <View
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#000000"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:text="出勤率"/>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:layout_marginTop="20dp"
                    android:id="@+id/tv_dayinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="你在21天考勤中有5项异常"
                    android:textColor="@color/common_white"
                    android:textSize="20sp" />
                <LinearLayout
                    android:layout_below="@id/tv_dayinfo"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/absent" />

                    <TextView
                        android:id="@+id/tv_absent"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingTop="5dp"
                        android:text="旷课2次"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/late" />


                    <TextView
                        android:id="@+id/tv_late"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="迟到早退两次"
                        android:paddingTop="5dp"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/changecolor"
        android:weightSum="1">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:background="@drawable/parent_shape"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="0.03"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_expand"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:src="@mipmap/expand" />

            <TextView
                android:id="@+id/tv_expand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:gravity="start"
                android:text="点击展开记录"
                android:textColor="#000"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:weightSum="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginLeft="30dp"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_reddot"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@mipmap/check_icon_bluemore" />

                    <TextView
                        android:id="@+id/tv_checkerror"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textSize="25sp"
                        android:text="15项考勤异常"
                        android:textColor="@color/app_white"
                        android:layout_marginLeft="10dp"
                         />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <ExpandableListView
                        android:scrollbars="none"
                        android:fadingEdge="none"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:id="@+id/el_checksituation"
                        android:layout_width="match_parent"
                        android:dividerHeight="15dp"
                        android:divider="#00000000"
                        android:childDivider="#00000000"
                        android:groupIndicator="@null"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="50dp"
                        android:footerDividersEnabled="false"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
