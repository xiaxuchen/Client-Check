<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cxyz.check.activity.CheckActivity">

    <GridView
        android:id="@+id/gv_check"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:columnWidth="90dp"
        android:gravity="center"
        android:horizontalSpacing="10dp"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="30dp" >
        </GridView>
    <RadioGroup
        android:background="@color/ripple_material_light"
        android:layout_alignParentBottom="true"
        android:id="@+id/rdgroup_check"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <RadioButton
            android:drawableTop="@mipmap/ic_launcher"
            android:id="@+id/rdclass_check"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="@string/table_class"/>

        <RadioButton
            android:drawableTop="@mipmap/ic_launcher"
            android:id="@+id/rdmain_check"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="@string/main_page" />

        <RadioButton
            android:drawableTop="@mipmap/ic_launcher"
            android:id="@+id/rdmine_check"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="@string/mine"/>
    </RadioGroup>
</RelativeLayout>